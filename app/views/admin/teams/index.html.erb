<!-- 导航栏 -->
<ol class="breadcrumb">
  <li class="active">全部团队</li>
</ol>



<%= link_to('+ 新建团队',new_admin_team_path,class: 'btn btn-primary btn-xs') %>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <td>团队名</td>
      <td>成员</td>
      <td>团队描述</td>
      <td>操作</td>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |t| %>
    <tr>
      <td><strong><%= link_to(t.name,admin_team_path(t)) %></strong></td>
       <td><kbd><%= t.users.count %>人</kbd> </td>
      <td> <small> <%= t.description %></small></td>
      <td><%= link_to('编辑',edit_admin_team_path(t)) %>  | <%= link_to('删除',admin_team_path(t), method: 'DELETE', data: { confirm: "确认删除该团队?" }) %> </td>
    </tr>
    <% end %>
  </tbody>

</table>